<%- include('../layout/head.ejs',{title:"Products"}) %>
<%- include('../layout/header.ejs',{account:"Admin"}) %> 
<%- include('../layout/sidebar.ejs') %>
      <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        <div class="row">
          <ol class="breadcrumb">
            <li>
              <a href="/admin/dashboard"><svg class="glyph stroked home">
                  <use xlink:href="#stroked-home"></use>
                </svg></a>
            </li>
            <li class="active">Quản lý sản phẩm</li>
          </ol>
        </div>
        <!--/.row-->

        <div class="row">
          <div class="col-lg-12">
            <h1 class="page-header">Quản lý sản phẩm</h1>
          </div>
        </div>
        <!--/.row-->
        <div class="row">
          <div class="col-md-6 col-md-2">
            <a name="" id="" class="btn btn-primary form-control" href="/admin/products/create" role="button"
            style="margin-bottom: 10px;">+ Thêm sản phẩm</a>
          </div>
          <div class="col-md-6 col-md-4">
            <label for="search">Tìm kiếm</label>
            <input class="form-control" style="margin-bottom: 10px;" placeholder="search" name="search" type="text" value="" />
          </div>
        </div>
        

        <table class="table">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên sản phẩm</th>
              <th>Giá sản phẩm</th>
              <th>Ảnh sản phẩm</th>
              <th>Trạng thái</th>
              <th>Hãng</th>
              <th>Chức năng</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(function(item,i=0){ %>
              <tr>
                <td scope="row">
                  <%= i+1 %>
                </td>
                <td>
                  <%= item.name %>
                </td>
                <td>
                  <%= item.price%> VND
                </td>
                <td>
                  <img width="130" height="180" src="/static/images/<%= item.thumbnail%>" alt="? " />
                </td>
                <td>
                  <span class="label label-<%=item.is_stock ? 'success' : 'danger' %>">
                    <%= item.is_stock ? 'Còn hàng' : 'Hết hàng' %>
                  </span>
                </td>
                <td>
                  <%= item.cat_id.title%>
                </td>

                <td>
                  <a name="" id="" class="btn btn-success" href="/admin/products/edit/<%= item._id %>"
                    role="button">Edit</a>
                  <a name="" id="" class="btn btn-danger" href="/admin/products/del/<%= item._id %>"
                    role="button">Delete</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if(hasPrev){ %>
              <li class="page-item">
                <a class="page-link" href="/admin/products?page=<%=prev%>" aria-label="Previous">
                  <span>&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <% } %>

                <% for(i of pages){ %>
                  <li class="page-item">
                    <a class="page-link" href="/admin/products?page=<%=i%>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>

                    <% if(hasNext){ %>
                      <li class="page-item">
                        <a class="page-link" href="/admin/products?page=<%=next%>" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                      <% } %>
          </ul>
        </nav>
      </div>

      <%- include('../layout/footer.ejs') %>