<%- include('../layout/head.ejs',{title:"Create product"}) %>
<%- include('../layout/header.ejs',{account:"Admin"}) %>
<%- include('../layout/sidebar.ejs') %>
            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li><a href="/admin/products">Quản lý sản phẩm</a></li>
                        <li class="active">Thêm sản phẩm</li>
                    </ol>
                </div><!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Thêm sản phẩm</h1>
                    </div>
                </div><!--/.row-->
                
               
                    <form action="/admin/products/store" role="form" method="post" enctype="multipart/form-data">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Tên sản phẩm</label>
                                <input class="form-control"  name="name" type="text"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Giá sản phẩm</label>
                                <input class="form-control" required name="price" type="number"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Bảo hành</label>
                                <input class="form-control"  required name="warranty" type="text"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Phụ kiện</label>
                                <input class="form-control" required name="accessories" type="text"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Khuyến mãi</label>
                                <input class="form-control"  required name="promotion" type="text"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Tình trạng</label>
                                <input class="form-control" required name="status" type="text"
                                autofocus="" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="">Ảnh sản phẩm</label>
                                <input  required name="thumbnail" type="file"
                                autofocus="" />
                            </div>
                            <div class="form-group">
                                <label for="">Danh mục</label>
                                <select name="cat_id" id="" class="form-control">
                                    <% for (category of categories){ %>
                                    <option value=<%= category._id %>><%= category.title %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="">Trạng thái</label>
                               <select name="is_stock" id="" class="form-control">
                                    <option value=1 selected> Còn hàng</option>
                                    <option value=0 > Hết hàng</option>
                               </select>
                            </div>
                            <div class="form-group">
                                <label for="">Sản phẩm nổi bật</label>
                                <div class="checkbox">
                                    <label ><input required name="featured" type="checkbox"
                                        autofocus="" value=1/> Nổi bật</label>
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <label for="">Mô tả sản phẩm</label>
                                <textarea class="form-control" required name="description" id="" cols="30" rows="3"></textarea>
                            </div>
                            <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
                            <button type="reset" class="btn btn-primary">Làm mới</button>
                        </div>

                    </form>
                
                
            </div>


<%- include('../layout/footer.ejs') %>