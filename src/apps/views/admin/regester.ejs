<%- include('./layout/head.ejs',{title:"Regester User"}) %>
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">Đăng ký User</div>
				<div class="panel-body">
					<% if(data && data.error){ %>
						<div class="alert alert-danger"><%= data.error %></div>
					<% } %>
							<% if(data.checkadd==true){ %>
								<div class="alert alert-success">
									<%= data.success %>
								</div>
								<% } %>
									<form role="form" method="post">
										<fieldset>
											<div class="form-group">
												<input class="form-control" placeholder="E-mail" name="email"
													type="email" autofocus="" />
											</div>
											<div class="form-group">
												<input class="form-control" placeholder="Password" name="password"
													type="password" value="" />
											</div>
											<div class="form-group">
												<input class="form-control" placeholder="Repassword" name="repassword"
													type="password" value="" />
											</div>
											<div class="form-group">
												<input class="form-control" placeholder="Role" name="role" type="text"
													value="" />
											</div>
											<div class="form-group">
												<input class="form-control" placeholder="Full_name" name="full_name"
													type="text" value="" />
											</div>
											<button type="submit" class="btn btn-primary">Regester</button>
											<a name="" id="" class="btn btn-primary" href="/admin/login"
												role="button">Quay lại</a>
										</fieldset>
									</form>
				</div>
			</div>
		</div>
		<!-- /.col-->
	</div>
	<!-- /.row -->
	<%- include('./layout/footer.ejs') %>